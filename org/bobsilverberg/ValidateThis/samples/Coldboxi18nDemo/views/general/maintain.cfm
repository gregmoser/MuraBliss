				<label for="UserPass">#rc.Validator.renderFieldIsRequired( "UserPass", rc.Context )##getResource( "LabelPassword" )#</label>				<input name="UserPass" id="UserPass" value="" size="35" maxlength="50" type="password" class="textInput" />				<p class="formHint">#getResource( "HintPassword" )#</p>			</div>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "VerifyPassword", getfwlocale() )#				<label for="VerifyPassword">#rc.Validator.renderFieldIsRequired( "VerifyPassword", rc.Context )##getResource( "LabelVerifyPassword" )#</label>				<input name="VerifyPassword" id="VerifyPassword" value="" size="35" maxlength="50" type="password" class="textInput" />				<p class="formHint">#getResource( "HintVerifyPassword" )#</p>			</div>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "UserGroupId", getfwlocale() )#				<label for="UserGroupId">#rc.Validator.renderFieldIsRequired( "UserGroupId", rc.Context )##getResource( "LabelUserGroup" )#</label>				<select name="UserGroupId" id="UserGroupId" class="selectInput">					<option value=""<cfif rc.userGroupId EQ ""> selected="selected"</cfif>>Select one...</option>					<option value="1"<cfif rc.userGroupId EQ 1> selected="selected"</cfif>>Member</option>					<option value="2"<cfif rc.userGroupId EQ 2> selected="selected"</cfif>>Administrator</option>				</select>				<p class="formHint">#getResource( "HintUserGroup" )#</p>			</div>		</fieldset>			<fieldset class="inlineLabels">			<legend>#getResource( "LegendUserInformation" )#</legend>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "Salutation", getfwlocale() )#				<label for="Salutation">#rc.Validator.renderFieldIsRequired( "Salutation", rc.Context )##getResource( "LabelSalutation" )#</label>				<input name="Salutation" id="Salutation" value="#rc.user.getSalutation()#" size="35" maxlength="50" type="text" class="textInput" />				<p class="formHint">#getResource( "HintSalutation" )#</p>			</div>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "FirstName", getfwlocale() )#				<label for="FirstName">#rc.Validator.renderFieldIsRequired( "FirstName", rc.Context )##getResource( "LabelFirstName" )#</label>				<input name="FirstName" id="FirstName" value="#rc.user.getFirstName()#" size="35" maxlength="50" type="text" class="textInput" />				<p class="formHint">#getResource( "HintFirstName" )#</p>			</div>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "LastName", getfwlocale() )#				<label for="LastName">#rc.Validator.renderFieldIsRequired( "LastName", rc.Context )##getResource( "LabelLastName" )#</label>				<input name="LastName" id="LastName" value="#rc.user.getLastName()#" size="35" maxlength="50" type="text" class="textInput" />				<p class="formHint">#getResource( "HintLastName" )#</p>			</div>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "LikeCheese", getfwlocale() )#				<p class="label">#rc.Validator.renderFieldIsRequired( "LikeCheese", rc.Context )##getResource( "LabelDoYouLikeCheese" )#</p>				<label for="LikeCheese-1" class="inlineLabel"><input name="LikeCheese" id="LikeCheese-1" value="1" type="radio" class=""<cfif rc.user.getLikeCheese() EQ 1> checked="checked"</cfif> />&nbsp;#getResource( "LabelYes" )#</label>				<label for="LikeCheese-2" class="inlineLabel"><input name="LikeCheese" id="LikeCheese-2" value="0" type="radio" class=""<cfif rc.user.getLikeCheese() EQ 0> checked="checked"</cfif> />&nbsp;#getResource( "LabelNo" )#</label>			</div>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "LikeChocolate", getfwlocale() )#				<p class="label">#rc.Validator.renderFieldIsRequired( "LikeChocolate", rc.Context )##getResource( "LabelDoYouLikeChocolate" )#</p>				<label for="LikeChocolate-1" class="inlineLabel"><input name="LikeChocolate" id="LikeChocolate-1" value="1" type="radio" class=""<cfif rc.user.getLikeChocolate() EQ 1> checked="checked"</cfif> />&nbsp;#getResource( "LabelYes" )#</label>				<label for="LikeChocolate-2" class="inlineLabel"><input name="LikeChocolate" id="LikeChocolate-2" value="0" type="radio" class=""<cfif rc.user.getLikeChocolate() EQ 0> checked="checked"</cfif> />&nbsp;#getResource( "LabelNo" )#</label>			</div>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "LikeOther", getfwlocale() )#				<label for="LikeOther">#rc.Validator.renderFieldIsRequired( "LikeOther", rc.Context )##getResource( "LabelWhatDoYouLike" )#</label>				<input name="LikeOther" id="LikeOther" value="#rc.user.getLikeOther()#" size="35" maxlength="50" type="text" class="textInput" />				<p class="formHint">#getResource( "HintWhatDoYouLike" )#</p>			</div>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "HowMuch", getfwlocale() )#				<label for="HowMuch">#rc.Validator.renderFieldIsRequired( "HowMuch", rc.Context )##getResource( "LabelHowMuchMoneyWouldYouLike" )#</label>				<input name="HowMuch" id="HowMuch" value="#rc.user.getHowMuch()#" size="35" maxlength="50" type="text" class="textInput" />				<p class="formHint">#getResource( "HintHowMuchMoneyWouldYouLike" )#</p>			</div>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "AllowCommunication", getfwlocale() )#				<p class="label">#rc.Validator.renderFieldIsRequired( "AllowCommunication", rc.Context )##getResource( "LabelAllowCommunication" )#</p>				<label for="AllowCommunication-1" class="inlineLabel"><input name="AllowCommunication" id="AllowCommunication-1" value="1" type="radio" class=""<cfif rc.user.getAllowCommunication() EQ 1> checked="checked"</cfif> />&nbsp;#getResource( "LabelYes" )#</label>				<label for="AllowCommunication-2" class="inlineLabel"><input name="AllowCommunication" id="AllowCommunication-2" value="0" type="radio" class=""<cfif rc.user.getAllowCommunication() EQ 0> checked="checked"</cfif> />&nbsp;#getResource( "LabelNo" )#</label>			</div>			<div class="ctrlHolder">				#rc.validationresult.renderErrorByField( "CommunicationMethod", getfwlocale() )#				<label for="CommunicationMethod">#rc.Validator.renderFieldIsRequired( "CommunicationMethod", rc.Context )##getResource( "LabelCommunicationMethod" )#</label>				<select name="CommunicationMethod" id="CommunicationMethod" class="selectInput">					<option value=""<cfif rc.user.getCommunicationMethod() EQ ""> selected="selected"</cfif>>Select one...</option>					<option value="Email"<cfif rc.user.getCommunicationMethod() EQ "Email"> selected="selected"</cfif>>Email</option>					<option value="Phone"<cfif rc.user.getCommunicationMethod() EQ "Phone"> selected="selected"</cfif>>Phone</option>					<option value="Pony Express"<cfif rc.user.getCommunicationMethod() EQ "Pony Express"> selected="selected"</cfif>>Pony Express</option>				</select>				<p class="formHint">#getResource( "HintCommunicationMethod" )#</p>			</div>		</fieldset>			<div class="buttonHolder">			<input type="submit" class="submitButton" value="#getResource( "ButtonSubmit" )#" />			<input type="hidden" name="userid" value="#rc.User.getUserID()#" />		</div>	</form> </div><cfif !rc.nojs><!--- this code is not required, it just customises error aesthetics ---><script type="text/javascript">jQuery(document).ready(function($) {	jQuery.validator.setDefaults({ 		errorClass: 'errorField', 		errorElement: 'p', 		errorPlacement: function(error, element) { 			error.prependTo( element.parents('div.ctrlHolder') ) 		}, 		highlight: function() {}	});});</script></cfif></cfoutput>